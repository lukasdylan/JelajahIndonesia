<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="appBarLayoutStyle">@style/PrimaryAppBarLayout</item>
        <item name="android:statusBarColor">?attr/colorOnPrimary</item>
    </style>

    <style name="SplashTheme" parent="AppTheme">
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@drawable/splash_screen_background</item>
    </style>

    <style name="PrimaryAppBarLayout" parent="Widget.MaterialComponents.AppBarLayout.Primary">
        <item name="android:background">?attr/colorOnPrimary</item>
    </style>

    <style name="ToolbarTitleAppearance" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:fontFamily">@font/visby_round_cf_demi_bold</item>
        <item name="fontFamily">@font/visby_round_cf_demi_bold</item>
    </style>

    <style name="ToolbarSubTitleAppearance" parent="TextAppearance.MaterialComponents.Subtitle2">
        <item name="android:fontFamily">@font/visby_round_cf_bold</item>
        <item name="fontFamily">@font/visby_round_cf_bold</item>
    </style>

    <style name="CollapsingToolbarExpandedTitleAppearance" parent="TextAppearance.MaterialComponents.Headline4">
        <item name="android:fontFamily">@font/visby_round_cf_demi_bold</item>
        <item name="fontFamily">@font/visby_round_cf_demi_bold</item>
        <item name="android:textColor">@android:color/transparent</item>
    </style>

    <style name="CollapsingToolbarExpandedTitleAppearance2" parent="TextAppearance.MaterialComponents.Headline4">
        <item name="android:fontFamily">@font/visby_round_cf_demi_bold</item>
        <item name="fontFamily">@font/visby_round_cf_demi_bold</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>

    <style name="CollapsingToolbarCollapsedTitleAppearance" parent="ToolbarTitleAppearance">
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>

    <style name="RoundedImageView" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerSize">12dp</item>
    </style>

    <style name="ChipTextAppearance" parent="TextAppearance.MaterialComponents.Subtitle2">
        <item name="android:fontFamily">@font/visby_round_cf_demi_bold</item>
        <item name="fontFamily">@font/visby_round_cf_demi_bold</item>
    </style>

    <style name="BottomSheet" parent="@style/Widget.Design.BottomSheet.Modal">
        <item name="android:background">@null</item>
    </style>

    <style name="BottomSheetDialogTheme" parent="@style/Theme.MaterialComponents.DayNight.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="bottomSheetStyle">@style/BottomSheet</item>
        <item name="android:colorBackground">?attr/colorOnPrimary</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
    </style>

    <style name="BottomSheetDialogAnimation">
        <item name="android:windowEnterAnimation">@anim/custom_bottom_sheet_slide_in</item>
        <item name="android:windowExitAnimation">@anim/custom_bottom_sheet_slide_out</item>
    </style>

</resources>